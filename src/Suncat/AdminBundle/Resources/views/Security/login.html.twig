{% extends base_template %}

{% block content %}
    <div class="connection">
        <form action="{{ path("sonata_admin_login_check") }}" method="post">

            {% if error %}
                <div class="alert alert-error">{{ error|trans({}, 'SuncatAdminBundle') }}</div>
            {% endif %}

            <div class="control-group">
                <label for="username">Username</label>

                <div class="controls">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="big sonata-medium"/>
                </div>
            </div>

            <div class="control-group">
                <label for="password">Password</label>

                <div class="controls">
                    <input type="password" id="password" name="_password" class="big sonata-medium" />
                </div>
            </div>

            <div class="form-actions" style="margin: 20px 0;">
                <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Login" />
            </div>
        </form>
    </div>
{% endblock content %}
